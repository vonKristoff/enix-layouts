.content-collection
	background-color #efefef
	display flex
	flex-wrap wrap

.content-tile
	padding .125em

.row-of-1
	width 100%
.row-of-2
	width 50%
.row-of-3
	width calc(100% / 3)
.row-of-4
	width calc(100% / 4)
.row-of-6
	width calc(100% / 6)
		
.row-of-2
	&--large
		width calc((100% / 3) * 2)
	&--medium
		width calc(100% / 3)
